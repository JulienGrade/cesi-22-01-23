{% extends 'base.html.twig' %}

{% block title %}Accueil - TailBlog{% endblock %}

{% block header %}{% endblock %}

{% block body %}
    <section class="bg-main-white dark:bg-main-black w-full md:w-11/12 lg:w-10/12 xl:w-9/12 mx-auto mt-12">
        <div class="px-6 py-10 mx-auto">
            <h1 class="text-3xl lg:text-4xl text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500 dark:from-blue-400 dark:to-cyan-300">
                <span class="relative top-4 text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500 dark:from-blue-400 dark:to-cyan-300">Ã‡a vient de sortir</span>
            </h1>
            {% for article in last_article %}
                <div class="mt-8 lg:-mx-6 lg:flex lg:items-center">
                    <img class="object-cover w-full lg:mx-6 lg:w-1/2 rounded-xl h-72 lg:h-96" src="{{ asset('uploads/articles/images/' ~ article.images[0].name) }}" alt="{{ article.title }} {{ loop.index }}">

                    <div class="mt-6 lg:w-1/2 lg:mt-0 lg:mx-6 ">
                        <p class="text-sm text-blue-500 uppercase">{{ article.blog.name }}</p>

                        <a href="#" class="block mt-4 text-2xl font-semibold text-main-blue hover:underline dark:text-white md:text-3xl">
                            {{ article.title|capitalize }}
                        </a>

                        <p class="mt-3 text-sm text-gray-500 dark:text-gray-300 md:text-sm">
                            {{ article.content|u.truncate(150, '...') }}
                        </p>

                        <a href="#" class="inline-block mt-2 text-blue-500 underline hover:text-blue-400">Lire l'article</a>

                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
